<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/menu_container">

    <RelativeLayout
        android:id="@+id/controls_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nimor"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

        <ImageButton
            android:id="@+id/toggle_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close"
            android:backgroundTint="@color/white"
            android:onClick="hideMenu"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/controls_wrapper"
        android:layout_marginTop="50dp">

        <!-- Albums - Submission -->
        <RelativeLayout
            android:id="@+id/album1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"/>
            
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/expand"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <!-- Songs -->
        <LinearLayout
            android:id="@+id/albumSongs1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/album1"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/song1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Song 1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play"
                    android:tint="@color/white"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/song2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Song 2"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play"
                    android:tint="@color/white"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

        <!-- Albums - Evolution -->
        <RelativeLayout
            android:id="@+id/album2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/album1"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evolution"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/expand"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <!-- Songs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/album2"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/song3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Song 3"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play"
                    android:tint="@color/white"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/song4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Song 4"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/play"
                    android:tint="@color/white"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>